<h1 class="page-header">Search Authors</h1>

<form action="/authors" method="GET">
    <label>Name:</label>
    <input type="text" name="name" value="<%= searchOptions.name %>">
    <button type="submit">Search</button>
    
    <br><br>

    <% authors.forEach(author => { %>
        <div class="btn-row">
            <div><%= author.name %></div>
            <a class="btn btn-primary" href="/authors/<%= author.id %>">View</a>
            <a class="btn btn-primary" href="/authors/<%= author.id %>/edit">Update</a>
            <%- include('../partials/deleteForm', { url: `/authors/${author.id}` }) %>
        </div>
        <% }); %>
</form>